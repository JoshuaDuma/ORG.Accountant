# syntax=docker/dockerfile:1.4

##########
# Build #
##########
FROM node:20-alpine AS builder

WORKDIR /app

# Install deps (use ci for reproducible installs)
COPY package*.json ./
RUN npm ci

# Copy source and build for production
COPY . .
# Force output to a flat /app/dist so we can copy cleanly in the next stage
RUN npx ng build --configuration=production --output-path=dist

############
# Runtime  #
############
FROM nginx:alpine

# Optional: replace default Nginx config with SPA-friendly one (serves index.html for unknown routes)
RUN <<'EOF' cat > /etc/nginx/conf.d/default.conf
server {
    listen 80;
    server_name _;
    root /usr/share/nginx/html;

    # Gzip for common text assets
    gzip on;
    gzip_types text/plain text/css application/javascript application/json application/xml image/svg+xml;

    location / {
        try_files $uri $uri/ /index.html;
    }

    # Cache static assets aggressively (adjust as needed)
    location ~* \.(?:js|css|png|jpg|jpeg|gif|svg|ico|woff2?)$ {
        expires 30d;
        access_log off;
        add_header Cache-Control "public";
        try_files $uri =404;
    }
}
EOF

# Copy the built app
COPY --from=builder /app/dist/ /usr/share/nginx/html/

EXPOSE 80
# Nginx default CMD is fine
